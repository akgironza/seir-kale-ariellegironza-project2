<%- include("../partials/head.ejs") %>

<body>
    <h1 id="myzebrasx-header">myZebraSymptoms Tracker</h1>
    
    <h2>Log A New Symptomatic Event</h2>
    
    <form action="/symptoms" method="post" id="new-log-form">

        <label for="description">Symptom experienced:</label>
        <input type="text" name="description" placeholder="symptom"/><br>
        
        <label for="startTime">When did the symptom start?:</label><br>
        <input type="datetime-local" name="startTime"><br>

        <label for="endTime">When did the symptom end?:</label><br>
        <input type="datetime-local" name="endTime"><br>
        
        <label for="treated">Treated?</label>
        <input type="checkbox" name="treated"/><br>

        <label for="treatment">Treatment used:</label><br>
        <input type="text" name="treatment" placeholder="treatment used"/><br>

        <input type="submit" value="Finish"/>

    </form>

</body>
</html>